<Page x:Class="Esoft.Pages.AddApartmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Esoft.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ИС Автоматизация бизнес-процессов застройщика - Добавление квартиры">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Номер квартиры" HorizontalAlignment="Center" Margin="0,0,0,5"/>
            <TextBox x:Name="NumberTextBox" Width="200" Margin="0,0,0,10"/>

            <TextBlock Text="Площадь" HorizontalAlignment="Center" Margin="0,10,0,5"/>
            <TextBox x:Name="AreaTextBox" Width="200" Margin="0,0,0,10"/>

            <TextBlock Text="Количество комнат" HorizontalAlignment="Center" Margin="0,10,0,5"/>
            <TextBox x:Name="RoomsCountTextBox" Width="200" Margin="0,0,0,10"/>

            <TextBlock Text="Этаж" HorizontalAlignment="Center" Margin="0,10,0,5"/>
            <TextBox x:Name="FloorTextBox" Width="200" Margin="0,0,0,10"/>

            <TextBlock Text="Выберите дом" HorizontalAlignment="Center" Margin="0,10,0,5"/>
            <ComboBox x:Name="HouseComboBox" DisplayMemberPath="Number" Width="200" Margin="0,0,0,10"/>

            <Button x:Name="AddButton" Content="Добавить" Click="AddButton_Click" Margin="0,10,0,0"/>
            <Button x:Name="BackButton" Content="Назад" Click="BackButton_Click" Margin="0,10,0,10"/>
        </StackPanel>
    </Grid>
</Page>
